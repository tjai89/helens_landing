<div class="welcome work" id="work">
  <div class="container">
    <div class="work-info">
      <div class="col-md-3 work-grids work-grd1 wow slideInLeft animated" data-wow-delay=".5s">
        <h3 class="title"><%= t "work.title" %></h3>
        <p><%= t "work.description" %></p>
        <ul>
          <li><span class="glyphicon glyphicon-ok-circle"></span><%= t "work.paragraph1" %></li>
          <li><span class="glyphicon glyphicon-ok-circle"></span><%= t "work.paragraph2" %></li>
          <li><span class="glyphicon glyphicon-ok-circle"></span><%= t "work.paragraph3" %></li>
